@using BarberPro.Models.DTOs.Responses
@{
    ViewData["Title"] = "Gestión de Barberos";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var barbers = ViewBag.Barbers as List<BarberSummaryDto> ?? new List<BarberSummaryDto>();
}

<div class="container mx-auto p-4 sm:p-6">
    <!-- Header -->
    <div class="mb-6 flex justify-between items-center">
        <div>
            <h1 class="text-2xl sm:text-3xl font-bold text-gold mb-1">Gestión de Barberos</h1>
            <p class="text-sm text-gray-400">Administra todos los barberos del sistema</p>
        </div>
        <button onclick="showCreateBarberModal()" class="btn btn-primary gap-2">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
            </svg>
            Nuevo Barbero
        </button>
    </div>

    <!-- Estadísticas Rápidas -->
    <div class="grid grid-cols-2 lg:grid-cols-4 gap-3 mb-6">
        <div class="bg-base-200 rounded-lg p-4 border border-base-300">
            <div class="text-xs text-gray-500 mb-1">Total Barberos</div>
            <div class="text-2xl font-bold text-gold">@barbers.Count</div>
        </div>
        <div class="bg-base-200 rounded-lg p-4 border border-base-300">
            <div class="text-xs text-gray-500 mb-1">Activos</div>
            <div class="text-2xl font-bold text-success">@barbers.Count(b => b.IsActive)</div>
        </div>
        <div class="bg-base-200 rounded-lg p-4 border border-base-300">
            <div class="text-xs text-gray-500 mb-1">Inactivos</div>
            <div class="text-2xl font-bold text-error">@barbers.Count(b => !b.IsActive)</div>
        </div>
        <div class="bg-base-200 rounded-lg p-4 border border-base-300">
            <div class="text-xs text-gray-500 mb-1">Total Citas</div>
            <div class="text-2xl font-bold text-gold">@barbers.Sum(b => b.TotalAppointments)</div>
        </div>
    </div>

    <!-- Búsqueda y Filtros -->
    <div class="mb-4 flex gap-2 flex-wrap">
        <input type="text" id="searchBarbers" placeholder="Buscar por nombre, negocio o teléfono..." 
               class="input input-bordered flex-1 min-w-[200px]" onkeyup="filterBarbers()">
        <select id="filterStatus" class="select select-bordered" onchange="filterBarbers()">
            <option value="">Todos los estados</option>
            <option value="active">Solo activos</option>
            <option value="inactive">Solo inactivos</option>
        </select>
    </div>

    <!-- Tabla de Barberos -->
    <div class="bg-base-100 rounded-lg border border-base-300 shadow-sm">
        <div class="overflow-x-auto">
            <table class="table table-sm">
                <thead>
                    <tr>
                        <th class="text-xs">Nombre</th>
                        <th class="text-xs">Negocio</th>
                        <th class="text-xs">Teléfono</th>
                        <th class="text-xs text-center">Citas</th>
                        <th class="text-xs text-right">Ingresos</th>
                        <th class="text-xs text-center">Estado</th>
                        <th class="text-xs text-center">Acciones</th>
                    </tr>
                </thead>
                <tbody id="barbersTableBody">
                    @foreach (var barber in barbers)
                    {
                        <tr data-barber-id="@barber.Id" data-name="@barber.Name.ToLower()" data-business="@(barber.BusinessName?.ToLower() ?? "")" data-phone="@barber.Phone.ToLower()" data-status="@(barber.IsActive ? "active" : "inactive")">
                            <td class="text-sm font-medium">@barber.Name</td>
                            <td class="text-xs text-gray-500">@(barber.BusinessName ?? "-")</td>
                            <td class="text-xs text-gray-500">-</td>
                            <td class="text-xs">@barber.Phone</td>
                            <td class="text-center text-sm">@barber.TotalAppointments</td>
                            <td class="text-right text-sm text-gold">$@barber.TotalRevenue.ToString("N2")</td>
                            <td class="text-center">
                                @if (barber.IsActive)
                                {
                                    <span class="badge badge-success badge-xs">Activo</span>
                                }
                                else
                                {
                                    <span class="badge badge-error badge-xs">Inactivo</span>
                                }
                            </td>
                            <td class="text-center">
                                <div class="flex gap-1 justify-center">
                                    <button onclick="viewBarberDetails(@barber.Id, '@Html.Raw(barber.Name.Replace("'", "\\'"))')" 
                                            class="btn btn-xs btn-primary" title="Ver Detalles">
                                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                                        </svg>
                                    </button>
                                    <button onclick="editBarber(@barber.Id, '@Html.Raw(barber.Name.Replace("'", "\\'"))', '@Html.Raw((barber.BusinessName ?? "").Replace("'", "\\'"))', '@Html.Raw(barber.Phone.Replace("'", "\\'"))')" 
                                            class="btn btn-xs btn-info" title="Editar">
                                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                                        </svg>
                                    </button>
                                    <button onclick="toggleBarberStatus(@barber.Id, @barber.IsActive.ToString().ToLower())" 
                                            class="btn btn-xs @(barber.IsActive ? "btn-warning" : "btn-success")" 
                                            title="@(barber.IsActive ? "Desactivar" : "Activar")">
                                        @if (barber.IsActive)
                                        {
                                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 18.364A9 9 0 005.636 5.636m12.728 12.728A9 9 0 015.636 5.636m12.728 12.728L5.636 5.636"/>
                                            </svg>
                                        }
                                        else
                                        {
                                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                                            </svg>
                                        }
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Modal para crear/editar barbero (reutilizar del Dashboard) -->
<script>
    function filterBarbers() {
        const search = document.getElementById('searchBarbers').value.toLowerCase();
        const statusFilter = document.getElementById('filterStatus').value;
        const rows = document.querySelectorAll('#barbersTableBody tr');
        
        rows.forEach(row => {
            const name = row.dataset.name || '';
            const business = row.dataset.business || '';
            const phone = row.dataset.phone || '';
            const status = row.dataset.status || '';
            
            const matchesSearch = name.includes(search) || business.includes(search) || phone.includes(search);
            const matchesStatus = !statusFilter || status === statusFilter;
            
            row.style.display = (matchesSearch && matchesStatus) ? '' : 'none';
        });
    }

    // Reutilizar funciones del Dashboard para crear/editar barbero
    function showCreateBarberModal() {
        // Redirigir al dashboard donde está el modal, o implementar aquí
        window.location.href = '/admin/dashboard#createBarber';
    }

    function viewBarberDetails(id, name) {
        window.location.href = `/admin/dashboard#barber-${id}`;
    }

    function editBarber(id, name, business, phone) {
        // Implementar edición
        alert(`Editar barbero: ${name}`);
    }

    function toggleBarberStatus(id, isActive) {
        if (!confirm(`¿Estás seguro de ${isActive ? 'desactivar' : 'activar'} este barbero?`)) {
            return;
        }

        fetch(`/admin/barbers/${id}/status`, {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ isActive: !isActive })
        })
        .then(r => r.json())
        .then(data => {
            if (data.success) {
                location.reload();
            } else {
                alert(data.message || 'Error al actualizar estado');
            }
        })
        .catch(err => {
            console.error(err);
            alert('Error al actualizar estado');
        });
    }
</script>

