@{
    ViewData["Title"] = "Inicio";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mx-auto p-6">
    <div class="card bg-base-100 shadow-xl">
        <div class="card-body">
            <h1 class="card-title text-3xl mb-4">
                <span class="text-gold">Bienvenido</span>, @ViewBag.Nombre
            </h1>
            
            <div class="divider"></div>
            
            <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mt-6">
                <div class="stat bg-base-200 rounded-lg p-4">
                    <div class="stat-title">Rol</div>
                    <div class="stat-value text-gold">@ViewBag.Rol</div>
                </div>
                
                <div class="stat bg-base-200 rounded-lg p-4">
                    <div class="stat-title">Sistema</div>
                    <div class="stat-value text-lg">BarberNic</div>
                </div>
                
                <div class="stat bg-base-200 rounded-lg p-4">
                    <div class="stat-title">Estado</div>
                    <div class="stat-value text-success">Activo</div>
                </div>
            </div>
            
            <div class="mt-8">
                <h2 class="text-2xl font-bold mb-4">Accesos RÃ¡pidos</h2>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <a href="/swagger" class="btn btn-outline btn-gold" target="_blank">
                        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z"/>
                        </svg>
                        API Swagger
                    </a>
                    
                    @if (ViewBag.Rol == "Administrador")
                    {
                        <a href="/admin/dashboard" class="btn btn-outline btn-gold">
                            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
                            </svg>
                            Panel Admin
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

